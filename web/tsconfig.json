{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": ["../web/src/**/*.d.ts", "../web/src/**/*.ts", "../web/src/**/*.svelte"]
}
